{{#unless trainer}}
    {{> member-menu id="classes"}}
{{/unless}}
{{#if trainer}}
    {{> trainer-menu id="classes"}}
{{/if}}
<!--Toggles navigation bars depending on who views the page-->

<section class="ui raised segment">

{{#if trainer}}
    <h4> Add New Class </h4>
    {{> new-class}}
{{/if}}

    <h4>Current Classes</h4>
    {{#each classList}}
        <table class="ui table">
            <div class="ui bulleted list">
            <tbody>
                    <tr>
                        <td class="fourteen wide">

                            <div class="ui accordian">
                                <div class="title">
                                    <i class="dropdown icon"></i>
                                    {{className}}
                                </div>
                                <div class="content">
                                    <p class="transition hidden">
                                    <br>
                                    Capacity: {{currentCapacity}}/{{maxCapacity}}
                                    <br>
                                    Difficulty: {{difficultyLevel}}
                                    <br>
                                    Duration: {{duration}}
                                    <br>
                                    Start Date: {{startDate}}
                                        <br>
                                        Time: {{classTime}}

                                    </p>
                                </div>
                            </div>

                        </td>
                        {{#if ../trainer}}
                            <td class="one wide right aligned">
                                <a href="/trainerDashboard/updateClass/{{classId}}">
                                    <i class="large blue edit icon"></i>
                                </a>
                            </td>
                        <td class=" one wide right aligned">
                            <a href="/trainerDashboard/removeClass/{{classId}}">
                                <i class="large red trash icon"></i>
                            </a>
                        </td>
                        {{/if}}
                        {{#unless trainer}}
                            <td class="one wide right aligned">
                                <a href="/dashboard/enroll/{{classId}}">
                                    <i class="large blue add user icon"></i>
                                </a>
                            </td>
                            <td class="one wide right aligned">
                                <i class="large red remove user icon"></i>
                            </td>
                        {{/unless}}
                    </tr>
            </tbody>
            </div>
        </table>
    {{/each}}
</section>

<script>
    $(function(){
        $('.ui.accordian').accordion();
    });
//    Code to expand and close accordion
</script>