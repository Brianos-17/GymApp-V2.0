<table class="ui fixed center aligned table">
    <thead>
    <tr>
        <th> Date </th>
        <th> Weight </th>
        <th> Chest </th>
        <th> Thigh </th>
        <th> Upper Arm </th>
        <th> Waist </th>
        <th> Hips </th>
        <th> Trend </th>
        <th> Comment</th>
        <th> Delete </th>
    </tr>
    </thead>
    <tbody>
    <div class="ui bulleted list">
        {{#each assessments}}
        <tr>
            <td>{{date}}</td>
            <td>{{weight}}</td>
            <td>{{chest}}</td>
            <td>{{thigh}}</td>
            <td>{{upperArm}}</td>
            <td>{{waist}}</td>
            <td>{{hips}}</td>
            <!--<td><i class="large ${assessment.getTrend()} arrow circle left icon"></i></td>-->
            <td>{{comment}}</td>
            <td>
                <a href="/dashboard/deleteassessment/{{id}}">
                    <i class=" large red trash icon"></i>
                </a>
            </td>
        </tr>
        {{/each}}
    </div>
    </tbody>
</table>