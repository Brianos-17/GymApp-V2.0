{{#each memberList}}
    <table class="ui table">

    <tbody>
    <div class="ui bulleted list">
        <tr>
            <td class="one wide">
                <i class="small user icon"></i>
            </td>
            <td class="fourteen wide">
                <a href="/trainerDashboard/viewMemberAssessments/{{memberId}}">{{firstName}}
                    {{lastName}}</a>
                <br>
                {{assessments.length}} assessments
            </td>
            <td class=" one wide right aligned">
                <a href="/trainerDashboard/deleteMember/{{memberId}}">
                    <i class="large red trash icon"></i>
                </a>
            </td>
        </tr>
    </div>
    </tbody>
</table>

{{/each}}