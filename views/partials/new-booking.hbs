<form class="ui stacked segment form" name="addNewBooking" action="dashboard/addNewBooking" method="POST">
    <div class="three fields">
        <div class="field">
            <label> Trainer </label>
            <select class="ui dropdown" name="trainer">
                {{#each trainerList}}
                    <option value="{{trainerId}}">{{firstName}} {{lastName}}</option>
                {{/each}}
            </select>
        </div>
        <div class="field">
            <label> Date </label>
            <div class="ui calendar" id="startDateCalendar">
                <div class="ui input left icon">
                    <i class="calendar icon"></i>
                    <input type="text" placeholder="Date" name="bookingDate">
                </div>
            </div>
        </div>
        <div class="field">
            <label> Time </label>
            <div class="ui calendar" id="startTimeCalendar">
                <div class="ui input left icon">
                    <i class="time icon"></i>
                    <input type="text" placeholder="Time" name="bookingTime">
                </div>
            </div>
        </div>
    </div>
    </div>

    <button class="ui blue submit button"> Create Booking </button>

</form>

<script>
    $(function(){
        $('#startDateCalendar').calendar(
                {type: 'date'}
        );
    });
</script>
<!--//code to allow calendar to popup when selected with dates -->
<script>
    $(function() {
        $('#startTimeCalendar').calendar(
                {type: 'time'}
        );
    });
</script>
<!--//code to allow calendar to popup when selected with times -->