
{{> trainer-menu id="classes"}}

<section class="ui raised segment">
    <form class="ui stacked segment form" name="addNewClass" action="/trainerDashboard/addNewClass" method="POST">
        <div class="three fields">
            <div class="field">
                <label> Class Name </label>
                <input placeholder="Name..." type="text" name="name">
            </div>
            <div class="field">
                <label> Capacity </label>
                <input placeholder="Capacity..." type="text" name="maxCapacity">
            </div>
            <div class="field">
                <label> Difficulty </label>
                <input placeholder="Difficulty level..." type="text" name="difficultyLevel">
            </div>
        </div>
        <div class="three fields">
            <div class="field">
                <label> Duration </label>
                <input placeholder="Duration..." type="text" name="duration">
            </div>
            <div class="field">
                <label> Start Date </label>
                <div class="ui calendar" id="startDateCalendar">
                    <div class="ui input left icon">
                        <i class="calendar icon"></i>
                        <input type="text" placeholder="Date">
                    </div>
                </div>
            </div>
            <div class="field">
                <label> Start Time </label>
                <div class="ui calendar" id="startTimeCalendar">
                    <div class="ui input left icon">
                        <i class="time icon"></i>
                        <input type="text" placeholder="Time">
                    </div>
                </div>
            </div>
        </div>

        <button class="ui blue submit button"> Add Class </button>

        <script>
            $(function(){
            $('#startDateCalendar').calendar(
                    {type: 'date'}
            );
        });
        </script>
        <script>
            $(function() {
                $('#startTimeCalendar').calendar(
                        {type: 'time'}
                );
            });
        </script>
        <!--//code to allow calendar to popup when selected-->
    </form>




    {{#each classList}}
        <table class="ui table">
            <div class="ui bulleted list">
            <tbody>
                    <tr>
                        <td class="fourteen wide">
                            <a href="/trainerDashboard/viewMemberAssessments/{{classId}}">{{name}}</a>
                            <br>
                            Capacity: {{currentCapacity}}/{{maxCapacity}}
                            <!--<br>-->
                            <!--Difficulty: {{difficultyLevel}}-->
                            <!--<br>-->
                            <!--Duration: {{duration}}-->
                            <!--<br>-->
                            <!--Start Date: {{startDate}}-->
                        </td>
                        <td class=" one wide right aligned">
                            <a href="/trainerDashboard/deleteMember/{{id}}">
                                <i class="large red trash icon"></i>
                            </a>
                        </td>
                    </tr>
            </tbody>
            </div>
        </table>

    {{/each}}
</section>