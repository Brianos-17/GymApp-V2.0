<table class="ui fixed center aligned table">
    <thead>
    <tr>
        <th>
            {{#if member}}
                Trainer
            {{/if}}
            {{#unless member}}
                Member
            {{/unless}}
        </th>
        <th>Date</th>
        <th>Time</th>
        <th>Edit</th>
    </tr>
    </thead>
    {{#each bookingList}}
    <tbody>
    <div class="ui bulleted list">
        <td>
            {{#if ../member}}
                {{trainerFirstName}} {{trainerLastName}}
            {{/if}}
            {{#unless ../member}}
                {{memberFirstName}} {{memberLastName}}
            {{/unless}}
        </td>
        <td>{{bookingDate}}</td>
        <td>{{bookingTime}}</td>
        <td>
            {{#if ../member}}
                <a href="/dashboard/updateBooking/{{bookingId}}">
                    <i class="large blue edit icon"></i></a>
                <a href="/dashboard/removeBooking/{{bookingId}}">
                    <i class="large red trash icon"></i></a>
            {{/if}}
            {{#unless ../member}}
                <a href="/trainerDashboard/updateBooking/{{bookingId}}">
                    <i class="large blue edit icon"></i></a>
                <a href="/trainerDashboard/removeBooking/{{bookingId}}">
                    <i class="large red trash icon"></i></a>
            {{/unless}}
        </td>
    </div>
    </tbody>
    {{/each}}
</table>