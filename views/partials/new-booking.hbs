{{#if member}}
    <form class="ui stacked segment form" name="addNewBooking" action="/dashboard/addNewBooking" method="POST">
{{/if}}
{{#unless member}}
    <form class="ui stacked segment form" name="addNewBooking" action="/trainerDashboard/addNewBooking" method="POST">
{{/unless}}

    <div class="three fields">
        <div class="field">
            {{#if member}}
                <label> Trainer </label>
                <select class="ui dropdown" name="trainerId">
                    {{#each trainerList}}
                        <option value="{{trainerId}}">{{firstName}} {{lastName}}</option>
                    {{/each}}
                </select>
            {{/if}}
            {{#unless member}}
                <label> Member </label>
                <select class="ui dropdown" name="id">
                    {{#each memberList}}
                            <option value="{{id}}">{{firstName}} {{lastName}}</option>
                    {{/each}}
                </select>
            {{/unless}}
        </div>
        <div class="field">
            <label> Date </label>
            <div class="ui calendar" id="bookingDateCalendar">
                <div class="ui input left icon">
                    <i class="calendar icon"></i>
                    <input type="text" placeholder="Date" name="bookingDate">
                </div>
            </div>
        </div>
        <div class="field">
            <label> Time </label>
            <div class="ui calendar" id="bookingTimeCalendar">
                <div class="ui input left icon">
                    <i class="time icon"></i>
                    <input type="text" placeholder="Time" name="bookingTime">
                </div>
            </div>
        </div>
    </div>
    </div>

    <button class="ui blue submit button"> Create Booking </button>

</form>

<script>
    $(function(){
        $('#bookingDateCalendar').calendar(
                {type: 'date'}
        );
    });
</script>
<!--//code to allow calendar to popup, when selected, with dates -->
<script>
    $(function() {
        $('#bookingTimeCalendar').calendar(
                {type: 'time'}
        );
    });
</script>
<!--//code to allow calendar to popup, when selected, with times -->