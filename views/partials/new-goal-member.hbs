<form class="ui stacked segment form" name="addNewGoal" action="/dashboard/addNewGoal" method="POST">

    <div class="three fields">
        <div class="field">
            <label> Target Area </label>
            <select class="ui fluid dropdown" name="targetArea">
                <option value="">Please choose an option</option>
                <option value="weight"> Weight </option>
                <option value="chest"> Chest </option>
                <option value="thigh"> Thigh </option>
                <option value="upperArm"> Upper Arm </option>
                <option value="waist"> Waist </option>
                <option value="hips"> Hips </option>
            </select>
        </div>
        <div class="field">
            <label> Target Goal </label>
            <input placeholder="00.00" type="text" pattern="\d.*" name="targetGoal" required>
        </div>
        <div class="field">
            <label> Date </label>
            <div class="ui calendar" id="goalDateCalendar">
                <div class="ui input left icon">
                    <i class="calendar icon"></i>
                    <input type="text" placeholder="Date" name="goalDate" required>
                </div>
            </div>
        </div>
    </div>
    <div class="field">
        <label> Description </label>
        <textarea placeholder="Enter a brief description of your goal..." rows="2" name="description"></textarea>
    </div>

    <button class="ui blue submit button"> Set Goal </button>

</form>

<script>$(".ui.fluid.dropdown").dropdown({
})
</script>

<script>
    $(function(){
        $('#goalDateCalendar').calendar(
                {type: 'date'}
        );
    });
</script>
